{
  "version": 2,
  "builds": [
    {
      "src": "server/app.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "server/**",
          "!server/uploads/**"
        ]
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "server/app.js" },
    { "source": "/uploads/(.*)", "destination": "server/app.js" },
    { "source": "/((?!api/|uploads/|.*\\.(?:css|js|png|jpg|jpeg|gif|svg|ico|json|txt|map|webmanifest)$).*)", "destination": "/index.html" }
  ]
}